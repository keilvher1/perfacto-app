  Widget _buildFilterChip(String label, bool isActive) {
    Color bgColor = const Color(0xFFD9D9D9);
    Color textColor = const Color(0xFF414141);

    if (label == '긍정키워드') {
      textColor = const Color(0xFF4E8AD9);
    } else if (label == '부정키워드') {
      textColor = const Color(0xFFF48A4D);
    } else if (label == '위치인증완료') {
      if (isActive) {
        bgColor = const Color(0xFF414141);
        textColor = const Color(0xFFD9D9D9);
      } else {
        textColor = const Color(0xFFD9D9D9);
      }
    }

    return Container(
      height: 27,
      padding: const EdgeInsets.symmetric(horizontal: 10, vertical: 5),
      decoration: BoxDecoration(
        color: bgColor,
        borderRadius: BorderRadius.circular(20),
      ),
      child: Text(
        label,
        style: TextStyle(
          color: textColor,
          fontSize: 13,
          fontWeight: label.contains('키워드') ? FontWeight.w700 : FontWeight.w500,
        ),
      ),
    );
  }

